rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user has teacher role
    function isTeacher() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (teacher)
    function isAdmin() {
      return isTeacher();
    }

    // Units collection rules
    match /units/{unitId} {
      // Allow read for all users (including unauthenticated students with teacher codes)
      allow read: if true;
      // Allow write only for users with teacher role
      allow write: if isTeacher();
    }

    // Users collection rules
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Teachers can read all user data (for finding students by teacher code)
      allow read: if isTeacher();
      // Allow querying users by teacherCode field for teacher code validation
      allow read: if isAuthenticated();

      // Progress subcollection rules (legacy - may be removed)
      match /progress/{progressId} {
        // Users can read and write their own progress
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
        // Teachers can read all progress data
        allow read: if isTeacher();
      }
    }

    // Teacher assignments collection rules
    match /teacher_assignments/{teacherCode} {
      // Teachers can read and write their own assignments
      allow read, write: if isAuthenticated() &&
        (isTeacher() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teacherCode == teacherCode);
      // Allow unauthenticated read access for student teacher code validation
      allow read: if true;
    }

    // Student progress collection rules (for new assignment-based progress)
    match /student_progress/{progressId} {
      // Students can read and write their own progress
      allow read, write: if isAuthenticated() &&
        resource.data.studentId == request.auth.uid;
      // Teachers can read all progress data
      allow read: if isTeacher();
      // Allow creating progress records for authenticated users
      allow create: if isAuthenticated() &&
        request.resource.data.studentId == request.auth.uid;
    }

    // Classes collection (for future expansion)
    match /classes/{classId} {
      // Teachers can manage their own classes
      allow read, write: if isAuthenticated() &&
        (isTeacher() && resource.data.teacherId == request.auth.uid);
      // Students can read classes they are enrolled in
      allow read: if isAuthenticated();
    }

    // Class members collection (for future expansion)
    match /class_members/{memberId} {
      // Teachers can manage members of their classes
      allow read, write: if isTeacher();
      // Students can read their own membership records
      allow read: if isAuthenticated() &&
        resource.data.studentId == request.auth.uid;
    }

    // Test collection (for connection testing)
    match /test/{document} {
      allow read, write: if isAuthenticated();
    }
  }
}
